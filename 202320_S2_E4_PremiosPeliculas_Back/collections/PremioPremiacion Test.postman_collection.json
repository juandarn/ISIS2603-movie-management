			"name": "Create Premiacion",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data = pm.response.json()\r",
							"pm.globals.set(\"premiacion_id\", data.id);\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
